@{
    ViewData["Title"] = "Delete";
}
@model ApplicationUser

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Delete Students</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Register Students</a></li>
                    <li class="breadcrumb-item active">Delete Student</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <!-- SELECT2 EXAMPLE -->
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Delete Students</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <form method="post">
                <input asp-for="Id" hidden/>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="StudentId" for="studentId">Student ID</label>
                                <input asp-for="StudentId" type="text" disabled class="form-control" id="studentId" placeholder="Enter student id">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Email" for="emailAddress">Email</label>
                                <input asp-for="Email" type="email" disabled class="form-control" id="emailAddress" placeholder="Enter email address">
                            </div>
                        </div>
                    </div>
                               <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="GivenName" for="givenName">Given Name</label>
                                <input asp-for="GivenName" type="text" class="form-control" id="givenName" placeholder="Enter given name">

                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Surname" for="surname">Surname</label>
                                <input asp-for="Surname" type="text" class="form-control" id="surname" placeholder="Enter surname">
                                
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="ContactName" for="contactPerson1">Contact Person 01 </label>
                                <input asp-for="ContactName" type="text" class="form-control" disabled id="contactPerson1" placeholder="Enter contact person">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="ContactPhone" for="contactNumber1">Contact Number 01 </label>
                                <input asp-for="ContactPhone" type="text" disabled class="form-control" id="contactNumber1" placeholder="Enter contact number">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="ContactPerson02Name" for="contactPerson2">Contact Person 02 (Optional) </label>
                                <input asp-for="ContactPerson02Name" type="text" disabled class="form-control" id="contactPerson2" placeholder="Enter contact person">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="ContactPerson02Phone" for="contactNumber1">Contact Number 02 (Optional) </label>
                                <input asp-for="ContactPerson02Phone" type="text" disabled class="form-control" id="contactNumber2" placeholder="Enter contact number">
                            </div>
                        </div>
                    </div>
            
                    <!-- /.row -->
                    <div class="row">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6">
                        </div>
                    </div>
                    <div class="row no-print">
                        <div class="col-12">
                            <input type="submit" value="Delete" class="btn btn-danger float-right" />
                            <button type="button" id="clearButton" class="btn btn-success float-right" style="margin-right: 5px;"> Clear All </button>
                            <a asp-controller="StudentRegister" asp-action="Index" class="btn btn-secondary float-right" style="margin-right: 5px;"> Back to List </a>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </form>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#clearButton").click(function () {
             $("#studentId").val('');
            $("#givenName").val('');
            $("#surname").val('');
            $("#emailAddress").val('');
            $("#contactPerson1").val('');
            $("#contactNumber1").val('');
            $("#contactPerson2").val('');
            $("#contactNumber2").val('');
            $("#description").val('');
            $("#exampleInputFile").val('');
        });
    });
</script>
<script>
    $(document).ready(function () {
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage) {
            alert(successMessage);
        }
    });
</script>

