@{
    ViewData["Title"] = "Delete";
}
@model Course

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Delete Course</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Configurations</a></li>
                    <li class="breadcrumb-item active">Delete Course</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <!-- SELECT2 EXAMPLE -->
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Delete Course</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <form method="post" asp-action="Delete">
                <input asp-for="Id" hidden/>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="CourseName" for="clientNamr">Course Name</label>
                                <input asp-for="CourseName" type="text" disabled class="form-control" id="clientName" placeholder="Enter client name">
                            </div>
                        </div>
                    </div>
                    <!-- /.row -->
                    <div class="row no-print">
                        <div class="col-12">
                            <input type="submit" value="Delete" class="btn btn-danger float-right" style="background-color:red"/>
                            <a asp-controller="Course" asp-action="Index" class="btn btn-secondary float-right" style="margin-right: 5px;"> Back to List </a>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </form>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



