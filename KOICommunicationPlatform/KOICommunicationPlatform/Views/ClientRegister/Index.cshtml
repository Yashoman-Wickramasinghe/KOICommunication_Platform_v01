<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Add Clients</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Register Clients</a></li>
                    <li class="breadcrumb-item active">Add Client</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

    <section class="content">
        <div class="container-fluid">
            <!-- SELECT2 EXAMPLE -->
            <div class="card card-default">
                <div class="card-header">
                <h3 class="card-title">Add Industrial Clients</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="clientNamr">Client Name/Business Name</label>
                            <input type="text" class="form-control" id="clientNamr" placeholder="Enter client name">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="emailAddress">Email</label>
                            <input type="email" class="form-control" id="emailAddress" placeholder="Enter email address">
                        </div>
                    </div>
                 </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="contactPerson1">Contact Person 01 </label>
                            <input type="text" class="form-control" id="contactPerson1" placeholder="Enter contact person">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="contactNumber1">Contact Number 01 </label>
                            <input type="text" class="form-control" id="contactNumber1" placeholder="Enter contact number">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="contactPerson1">Contact Person 02 (Optional) </label>
                            <input type="text" class="form-control" id="contactPerson1" placeholder="Enter contact person">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="contactNumber1">Contact Number 02 (Optional) </label>
                            <input type="text" class="form-control" id="contactNumber1" placeholder="Enter contact number">
                        </div>
                    </div>
                </div>
                    <div class="row">
                        <div class="col-md-12">
                       
                        <div class="form-group">
                            <label for="description">Description (Optional)</label>
                            <textarea class="form-control" rows="3" placeholder="Enter description" id="description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">Submissions (Optional)</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="exampleInputFile">
                                    <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                </div>
                                <div class="input-group-append">
                                    <span class="input-group-text">Upload</span>
                                </div>
                            </div>
                        </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                <div class="row">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
                <div class="row no-print">
                    <div class="col-12">
                        <button type="button" class="btn btn-primary float-right">Submit</button>
                        <button type="button" class="btn btn-success float-right" style="margin-right: 5px;"> Clear All </button>
                    </div>
                </div>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->

